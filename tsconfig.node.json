{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["vite.config.ts", "vitest.config.ts", "scripts/**/*.ts"]
}
